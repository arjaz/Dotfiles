# set basic gaps
gaps inner 20

# bind turn off gaps
bindsym $mod+g gaps inner all set 0

# bind set gaps to 20
bindsym $mod+t gaps inner all set 20

# set smart gaps on
smart_gaps on

# disable window titlebars
for_window [class="^.*"] border pixel 2

# set smart borders on
smart_borders no_gaps

